<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/images_show_item_image"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/about"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/images_show_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片名称" />

        <TextView
            android:id="@+id/images_show_item_relation_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="关联码...." />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/images_show_item_creattime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-08-04" />

        <TextView
            android:id="@+id/images_show_item_lastmodifytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2014-08-31" />
    </LinearLayout>
    
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/images_show_item_statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传" />

        <TextView
            android:id="@+id/images_show_item_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="旋转" />
    </LinearLayout>
</LinearLayout>